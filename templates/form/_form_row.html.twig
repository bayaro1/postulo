<div class="form-group{% if form_errors(field) %} is-invalid{% endif %}">
    
    {{ form_label(field, null, {
        'label': label,
        'label_attr': {'class': 'form-label'}
    }) }}

    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}

    <div class="form-error">
        {{ form_errors(field) }}
    </div>
</div>